<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a1521315.test02.Result">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="820dp"
            android:layout_height="240dp"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:background="@drawable/frame"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_weight="0.52">

            <TextView
                android:gravity="center"
                android:id="@+id/coursename"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:text="コース名"
                android:layout_weight="0.11" />

            <TextView
                android:id="@+id/mileage"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:text="走行距離" />

            <TextView
                android:id="@+id/maxheartbeat"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="最大心拍数" />

            <TextView
                android:id="@+id/mets"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="運動強度" />

            <TextView
                android:id="@+id/avg"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="平均速度" />

            <TextView
                android:id="@+id/time"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="運動時間" />

        </LinearLayout>
    </LinearLayout>


    <Button
        android:text="結果をツイッターでつぶやく"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tweet"
        android:layout_marginTop="13dp"
        android:layout_alignParentBottom="true" />

    <Button
        android:text="コース選択へ戻る"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/tweet"
        android:layout_marginStart="437dp" />


</RelativeLayout>
