<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a1521315.test02.Result">


    <Button
        android:text="結果をツイッターでつぶやく"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tweet"
        android:layout_marginTop="13dp"
        android:layout_alignParentBottom="true" />

    <Button
        android:text="トレーニングメニューへ戻る"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/tweet"
        android:layout_marginStart="437dp" />

    <LinearLayout
        android:background="@drawable/frame"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:weightSum="1"
        android:layout_above="@+id/tweet">

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_weight="0.09"
            android:layout_width="300dp">

            <TextView
                android:gravity="right"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="コース名　　："
                android:layout_weight="0.1"/>

            <TextView
                android:gravity="right"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="走行距離　　："
                android:layout_weight="0.1"/>

            <TextView
                android:gravity="right"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="最大心拍　　："
                android:layout_weight="0.1"/>

            <TextView
                android:gravity="right"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="平均速度　　："
                android:layout_weight="0.1"/>

            <TextView
                android:gravity="right"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="最高速度　　："
                android:layout_weight="0.1"/>

            <TextView
                android:gravity="right"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="残り時間　　："
                android:layout_weight="0.1"/>

            <TextView
                android:gravity="right"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="消費カロリー："
                android:layout_weight="0.1"/>
            <TextView
                android:gravity="right"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="クリアランク："
                android:layout_weight="0.1"/>

        </LinearLayout>

        <LinearLayout


            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_weight="0.73">

            <TextView
                android:gravity="left"
                android:id="@+id/coursename"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:text="コース名"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"/>

            <TextView
                android:id="@+id/mileage"
                android:gravity="left"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="走行距離"
                android:layout_weight="0.1"/>

            <TextView
                android:id="@+id/maxheartbeat"
                android:gravity="left"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="最大心拍"
                android:layout_weight="0.1"/>

            <TextView
                android:id="@+id/avg"
                android:gravity="left"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="平均速度"
                android:layout_weight="0.1"/>

            <TextView
                android:id="@+id/max"
                android:gravity="left"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="最高速度"
                android:layout_weight="0.1"/>

            <TextView
                android:id="@+id/time"
                android:gravity="left"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="運動時間"
                android:layout_weight="0.1"/>

            <TextView
                android:id="@+id/cal"
                android:gravity="left"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="消費カロリー"
                android:layout_weight="0.1"/>
            <TextView
                android:id="@+id/rank"
                android:gravity="left"
                android:textSize="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-（走るのを中断しました）"
                android:layout_weight="0.1"/>
        </LinearLayout>



    </LinearLayout>


</RelativeLayout>
