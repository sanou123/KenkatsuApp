<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuSelect"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:weightSum="1">

    <TextView
        android:id="@+id/title_user_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/text03_title_detail"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="#00000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/training"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="トレーニング"
            android:textSize="20sp"
            android:layout_width="wrap_content" />

        <TextView
        android:id="@+id/training_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="トレーニングを開始します。"
        android:layout_alignRight="@+id/training"
        android:textSize="19sp"
        android:textColor="#000000"
        android:background="#00000000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal">

    <Button
        android:id="@+id/training_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/training"
        android:text="トレーニングの履歴"
        android:textSize="20sp"
        />

    <TextView
    android:id="@+id/training_log_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="いままでのトレーニングの結果を閲覧できます。"
    android:layout_alignRight="@+id/training"
    android:textSize="20sp"
    android:textColor="#000000"
    android:background="#00000000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/graph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/training"
            android:text="グラフ表示"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/graph_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="いままでのトレーニングの結果をグラフ表示できます。"
            android:layout_alignRight="@+id/training"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="#00000000"/>

    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal"
        android:weightSum="1">

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="登録情報の変更"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/updatet_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登録情報を変更できます。"
        android:layout_alignRight="@+id/training"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="#00000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal"
        android:weightSum="1">

    <Button
            android:id="@+id/dictionary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="健康辞典"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/dictionary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="健康に関することについて調べることができます。"
            android:layout_alignRight="@+id/training"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="#00000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="ツイート検索"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="twitterで他のユーザのトレーニング結果を検索します。"
            android:layout_alignRight="@+id/training"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="#00000000" />

    </LinearLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="ユーザ選択画面へ"
            android:id="@+id/user_serect"
            android:layout_gravity="right" />

</LinearLayout>