<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MenuSelect"
    android:background="@drawable/mainmenu0">


    <RelativeLayout
        android:layout_height="wrap_content"
        android:id="@+id/TextLayout"
        android:layout_width="500dp"
        android:layout_marginStart="168dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/title_user_select"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:text="-----さん" />

        <TextView
            android:id="@+id/text_bmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:text="BMIは-----"
            android:layout_below="@+id/title_user_select"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/BackKeyLayout"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="90dp">

        <Button
            android:id="@+id/update"

            android:text="ユーザ情報更新"
            android:textSize="24sp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp" />
    </RelativeLayout>

    <ImageView
        android:layout_height="90dp"
        android:layout_width="90dp"
        app:srcCompat="@drawable/tori"
        android:id="@+id/imageTori"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/TextLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="130dp" />

    <Button
        android:id="@+id/training_log"
        android:text="トレーニング履歴"
        android:textSize="30sp"
        android:layout_weight="1"
        android:background="@drawable/button_state"
        android:layout_height="100dp"
        android:layout_width="200dp"
        android:layout_above="@+id/BackKeyLayout"
        android:layout_alignStart="@+id/training" />

    <Button
        android:id="@+id/dictionary"
        android:text="健康辞典"
        android:textSize="30sp"
        android:layout_weight="1"
        android:background="@drawable/button_state"
        android:layout_height="100dp"
        android:layout_width="200dp"
        android:layout_alignTop="@+id/training_log"
        android:layout_alignStart="@+id/search" />

    <Button
        android:id="@+id/training"
        android:text="トレーニング"
        android:textSize="30sp"
        android:layout_weight="1"
        android:background="@drawable/button_state"
        android:layout_height="100dp"
        android:layout_width="200dp"
        android:layout_alignBottom="@+id/imageTori"
        android:layout_alignEnd="@+id/TextLayout"
        android:layout_marginBottom="54dp" />

    <Button
        android:id="@+id/search"
        android:text="ツイート検索"
        android:textSize="30sp"
        android:layout_weight="1"
        android:background="@drawable/button_state"
        android:layout_height="100dp"
        android:layout_width="200dp"
        android:layout_alignTop="@+id/training"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="64dp" />

</RelativeLayout>