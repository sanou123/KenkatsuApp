<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MenuSelect">


    <LinearLayout
        android:id="@+id/BackKeyLayout"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_height="70dp">

        <Button
            android:id="@+id/update"
            android:text="ユーザ情報更新"
            android:textSize="24sp"
            android:layout_height="80dp"
            android:layout_width="0dip"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/graph"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:text="グラフ表示"
            android:textSize="20sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="900dp"
        android:layout_height="wrap_content"
        android:id="@+id/TextLayout"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/title_user_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:text="-----さんのメニュー" />

        <TextView
            android:id="@+id/text_bmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:text="-----さんのBMIは-----"
            android:layout_below="@+id/title_user_select"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="デバッグ用"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_debug"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/text_bmi"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:id="@+id/ManuLayout2"
        android:layout_below="@+id/TextLayout"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:id="@+id/Left"
            android:layout_width="0dip"
            android:layout_weight="1">

            <Button
                android:id="@+id/training"
                android:text="トレーニング"
                android:textSize="50sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/dictionary"
                android:text="健康辞典"
                android:textSize="50sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:id="@+id/Right"
            android:layout_width="0dip"
            android:layout_weight="1">

            <Button
                android:id="@+id/training_log"
                android:text="トレーニング履歴"
                android:textSize="50sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/search"
                android:text="ツイート検索"
                android:textSize="50sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>