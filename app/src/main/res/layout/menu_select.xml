<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MenuSelect">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/TextLayout">

        <TextView
            android:id="@+id/title_user_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:text="-----さんのメニュー" />

        <TextView
            android:id="@+id/text_bmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:text="-----さんのBMIは-----"
            android:layout_below="@+id/title_user_select"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="デバッグ用(なにか表示したいものがあればここにどうぞ)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_debug"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/text_bmi"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/BackKeyLayout"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_height="80dp">

        <Button
            android:id="@+id/update"

            android:text="ユーザ情報更新"
            android:textSize="24sp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp" />

    </RelativeLayout>

    <GridLayout
        android:id="@+id/Menulayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/TextLayout"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/training"
            android:text="トレーニング"
            android:textSize="50sp"
            android:layout_width="500dp"
            android:layout_height="150dp"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/training_log"
            android:text="トレーニングの履歴"
            android:textSize="50sp"
            android:layout_width="500dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/search"
            android:text="ツイート検索"
            android:textSize="50sp"
            android:layout_width="500dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:id="@+id/dictionary"
            android:text="健康辞典"
            android:textSize="50sp"
            android:layout_width="500dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_row="1"
            android:layout_column="0" />

    </GridLayout>

</RelativeLayout>