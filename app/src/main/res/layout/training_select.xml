<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/select_training"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.a1521315.test02.TrainingSelect"
    android:background="@drawable/trainingmenu">

    <Button
        android:id="@+id/buttonNormal"
        android:text="通常トレーニング"
        android:layout_height="80dp"
        android:textSize="36sp"
        android:background="@drawable/button_state"
        android:layout_width="400dp"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="240dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/buttonFitness"
        android:text="体力テスト"
        android:layout_height="80dp"
        android:textSize="40sp"
        android:background="@drawable/button_state"
        android:layout_width="400dp"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/buttonNormal"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp" />

    <Button
        android:id="@+id/buttonEndurance"
        android:text="耐久トレーニング"
        android:layout_height="80dp"
        android:textSize="40sp"
        android:background="@drawable/button_state"
        android:layout_width="400dp"
        android:layout_marginStart="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="140dp" />

    <TextView
        android:id="@+id/textMSG"
        android:text="トレーニングメニューを選んでください"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_height="60dp" />

</RelativeLayout>
