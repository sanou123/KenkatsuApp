<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/select_training"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.a1521315.test02.TrainingSelect">

    <TextView
        android:id="@+id/textMSG"
        android:text="トレーニングメニューを選んでください"
        android:textSize="40sp"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/TariningMenuLayout">

        <Button
            android:text="体力テスト"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonEndurance"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="28dp"
            android:id="@+id/buttonFitness" />

        <Button
            android:text="耐久"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonNormal"
            android:layout_alignRight="@+id/buttonNormal"
            android:layout_alignEnd="@+id/buttonNormal"
            android:layout_marginTop="28dp"
            android:id="@+id/buttonEndurance" />

        <Button
            android:text="通常"
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="35dp"
            android:id="@+id/buttonNormal" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/BackKeyLayout"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_height="80dp">

        <Button
            android:id="@+id/buttonBack"
            android:text="もどる"
            android:textSize="50sp"
            android:layout_gravity="right"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginEnd="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <RelativeLayout
            android:layout_width="500dp"
            android:layout_height="200dp"
            android:layout_below="@+id/buttonEndurance"
            android:layout_toEndOf="@+id/buttonFitness"
            android:layout_marginStart="201dp"
            android:layout_marginTop="11dp">

            <TextView
                android:text="コースを選択して走る通常のメニューです"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/buttonEndurance"
                android:layout_toRightOf="@+id/buttonFitness"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:id="@+id/textView2"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:text="体力テストモードです"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:layout_alignBottom="@+id/buttonFitness"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3" />

            <TextView
                android:text="ひたすら走り続ける耐久モードです"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:layout_above="@+id/buttonFitness"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
