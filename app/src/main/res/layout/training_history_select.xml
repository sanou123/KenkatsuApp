<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/select_training"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                tools:context="com.example.a1521315.test02.TrainingSelect"
                android:background="@drawable/history0">

    <TextView
        android:id="@+id/textMSG"
        android:text="閲覧したい履歴を選んでください"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:background="@android:color/black"
        android:layout_height="60dp"/>

    <RelativeLayout
        android:id="@+id/TariningMenuLayout"
        android:layout_below="@+id/textMSG"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/buttonEndurance"
            android:text="耐久トレーニング"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:layout_below="@+id/buttonNormal"
            android:layout_alignStart="@+id/buttonNormal"
            android:layout_marginTop="20dp"
            android:textSize="40sp"
            android:background="@drawable/button_state"/>

        <Button
            android:id="@+id/buttonFitness"
            android:text="体力テスト"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:layout_below="@+id/buttonEndurance"
            android:layout_alignStart="@+id/buttonEndurance"
            android:layout_marginTop="20dp"
            android:textSize="40sp"
            android:background="@drawable/button_state"/>

        <Button
            android:id="@+id/buttonGraph"
            android:text="グラフ閲覧"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:layout_below="@+id/buttonFitness"
            android:layout_alignStart="@+id/buttonFitness"
            android:onClick="showDatePickerDialog"
            android:layout_marginTop="20dp"
            android:textSize="40sp"
            android:background="@drawable/button_state"/>

        <Button
            android:id="@+id/buttonNormal"
            android:text="通常トレーニング"
            android:layout_height="80dp"
            android:layout_marginTop="110dp"
            android:textSize="40sp"
            android:background="@drawable/button_state"
            android:layout_marginEnd="140dp"
            android:layout_width="400dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>

</RelativeLayout>
