<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.example.a1521315.test02.VideoPlay">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView android:id="@+id/surfaceView1" android:layout_width="match_parent" android:layout_height="match_parent"></SurfaceView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="リザルト"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonResult"
            android:visibility="invisible"
            android:layout_above="@+id/buttonPlay"
            android:layout_alignStart="@+id/buttonPlay"
            android:layout_marginBottom="87dp" />

        <Button
            android:text="PLAY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPlay"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="00:00.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTimer"
            android:textSize="50sp"
            android:textColor="@android:color/black"
            android:background="@android:color/background_light"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="心拍:      "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Sinpaku"
            android:textSize="36sp"
            android:textColor="@android:color/holo_red_light"
            android:layout_above="@+id/Kyori"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textHeartbeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:text="0"
            android:textSize="80px"
            android:layout_gravity="right"
            android:layout_alignStart="@+id/textMileage"
            android:layout_above="@+id/Kyori"
            android:layout_toStartOf="@+id/relativeLayout"
            android:layout_alignEnd="@+id/textTimer" />

        <TextView
            android:text="走行距離:             "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Kyori"
            android:textSize="36sp"
            android:textColor="@android:color/holo_red_light"
            android:layout_above="@+id/Jisoku"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:text="0.0"
            android:textSize="80px"
            android:layout_gravity="right|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textMileage" />

        <TextView
            android:id="@+id/textMileage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:text="0.0"
            android:textSize="80px"
            android:layout_gravity="right"
            android:layout_marginStart="30dp"
            android:layout_alignBaseline="@+id/Kyori"
            android:layout_alignBottom="@+id/Kyori"
            android:layout_toEndOf="@+id/Sinpaku" />

        <TextView
            android:text="aaaaaaaaaaaaaaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTest"
            android:textSize="30sp"
            android:textColor="@android:color/holo_orange_light"
            android:layout_marginStart="52dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/buttonPlay" />

        <RelativeLayout
            android:layout_height="501dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bar"
                android:id="@+id/image_view_bar"
                android:scaleType="fitEnd"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/image_view_me" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/me"
                android:id="@+id/image_view_me"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <TextView
            android:text="コース番号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textCourse"
            android:textSize="36sp"
            android:textColor="@android:color/holo_red_light"
            android:layout_below="@+id/textTimer"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/connectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Connect"
            android:layout_above="@+id/statusValue"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPause"
            android:visibility="invisible"
            android:layout_alignBaseline="@+id/buttonPlay"
            android:layout_alignBottom="@+id/buttonPlay"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="時速:        　  　   "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Jisoku"
            android:textSize="36sp"
            android:lineSpacingExtra="36sp"
            android:textColor="@android:color/holo_red_light"
            android:layout_alignBaseline="@+id/textSpeed"
            android:layout_alignBottom="@+id/textSpeed"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textColor="@android:color/holo_red_light"
            android:text="Status:"

            android:layout_above="@+id/Sinpaku"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/statusValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_light"
            android:textSize="36sp"
            android:layout_above="@+id/Sinpaku"
            android:layout_alignStart="@+id/textHeartbeat" />

    </RelativeLayout>


</FrameLayout>