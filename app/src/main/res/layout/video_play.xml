<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.example.a1521315.test02.VideoPlay">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView android:id="@+id/surfaceView1" android:layout_width="match_parent" android:layout_height="match_parent"></SurfaceView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="PLAY"
            android:layout_height="150dp"
            android:id="@+id/buttonPlay"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="500dp"
            android:textSize="100sp" />

        <TextView
            android:text="00:00.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTimer"
            android:textSize="50sp"
            android:textColor="@android:color/black"
            android:background="@android:color/background_light"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="心拍:      "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Sinpaku"
            android:textSize="36sp"
            android:textColor="@android:color/holo_red_light"
            android:layout_above="@+id/Kyori"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textHeartbeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:text="0"
            android:textSize="80px"
            android:layout_gravity="right"
            android:layout_alignEnd="@+id/textMileage"
            android:layout_alignStart="@+id/textMileage"
            android:layout_above="@+id/Kyori" />

        <TextView
            android:text="走行距離:             km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Kyori"
            android:textSize="36sp"
            android:textColor="@android:color/holo_red_light"
            android:layout_above="@+id/Jisoku"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:text="0.0"
            android:textSize="80px"
            android:layout_gravity="right|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textMileage" />

        <TextView
            android:id="@+id/textMileage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:text="0.0"
            android:textSize="80px"
            android:layout_gravity="right"
            android:layout_marginStart="30dp"
            android:layout_alignBaseline="@+id/Kyori"
            android:layout_alignBottom="@+id/Kyori"
            android:layout_toEndOf="@+id/Sinpaku" />

        <RelativeLayout
            android:layout_height="501dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bar"
                android:id="@+id/image_view_bar"
                android:scaleType="fitEnd"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/image_view_me" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/me"
                android:id="@+id/image_view_me"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <TextView
            android:text="時速:        　  　   km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Jisoku"
            android:textSize="36sp"
            android:lineSpacingExtra="36sp"
            android:textColor="@android:color/holo_red_light"
            android:layout_alignBaseline="@+id/textSpeed"
            android:layout_alignBottom="@+id/textSpeed"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textColor="@android:color/holo_red_light"
            android:text="Status:"

            android:layout_above="@+id/Sinpaku"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/statusValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:layout_above="@+id/Sinpaku"
            android:layout_alignStart="@+id/textHeartbeat"
            android:textColor="@android:color/holo_red_light"
            android:text="text" />

        <TextView
            android:text="aaaaaaaaaaaaaaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTest"
            android:textSize="30sp"
            android:textColor="@android:color/holo_orange_light"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textTimer" />

        <Button
            android:text="リザルト"
            android:layout_width="500dp"
            android:layout_height="150dp"
            android:id="@+id/buttonResult"
            android:visibility="invisible"
            android:layout_alignTop="@+id/buttonPlay"
            android:layout_alignStart="@+id/buttonPlay"
            android:textSize="100sp" />

        <Button
            android:text="Pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPause"
            android:visibility="invisible"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="コース番号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textCourse"
            android:textSize="36sp"
            android:textColor="@android:color/holo_red_light"
            android:layout_alignBottom="@+id/buttonPause"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:id="@+id/ConnectCheak"
            android:visibility="visible"
            android:layout_above="@+id/statusValue"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="46dp"
            android:background="@android:color/holo_red_dark">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/textConnectMsg1"
                    android:text="心拍数を測定しながら走行しますか？"
                    android:layout_width="600dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_below="@+id/textConnectMsg1"
                    android:id="@+id/textConnectMsg2"
                    android:text="接続する場合は接続を押して接続確立させてから続行。"
                    android:layout_width="600dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:layout_below="@+id/textConnectMsg2"
                    android:id="@+id/textConnectMsg3"
                    android:text="接続しない場合はそのまま続行。"
                    android:layout_width="600dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_below="@+id/textConnectMsg3"
                    android:id="@+id/textConnectMsg4"
                    android:text=""
                    android:layout_width="600dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_below="@+id/textConnectMsg4"
                    android:id="@+id/textConnectStatus"
                    android:text="connect. / not connected."
                    android:layout_width="600dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:layout_alignParentStart="true" />


            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="100dp"
                android:layout_width="600dp"
                android:layout_gravity="center"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="0dp"
                android:layout_alignParentEnd="true">

                <Button
                    android:id="@+id/buttonYes"
                    android:text="接続する"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/buttonNo"
                    android:text="続行"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:textSize="30sp" />


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</FrameLayout>