<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.example.a1521315.test02.VideoPlay">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView android:id="@+id/surfaceView1" android:layout_width="match_parent" android:layout_height="match_parent"></SurfaceView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="リザルト"
            android:layout_width="500dp"
            android:layout_height="150dp"
            android:id="@+id/buttonResult"
            android:visibility="invisible"
            android:layout_alignTop="@+id/buttonPlay"
            android:layout_alignStart="@+id/buttonPlay"
            android:textSize="100sp" />

        <Button
            android:text="PLAY"
            android:layout_height="150dp"
            android:id="@+id/buttonPlay"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="500dp"
            android:textSize="100sp" />

        <TextView
            android:text="確認用(完成したら削除する)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTest"
            android:textSize="30sp"
            android:textColor="@android:color/holo_orange_light"
            android:layout_above="@+id/MeterLayout"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:id="@+id/ConnectCheak"
            android:visibility="visible"
            android:background="@android:color/holo_red_dark"
            android:layout_above="@+id/textTest"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/textConnectMsg1"
                    android:text="心拍数を測定しながら走行しますか？"
                    android:layout_width="600dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_below="@+id/textConnectMsg1"
                    android:id="@+id/textConnectMsg2"
                    android:text="接続する場合は接続を押して接続確立させてから続行。"
                    android:layout_width="600dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:layout_alignParentStart="true"
                    />

                <TextView
                    android:layout_below="@+id/textConnectMsg2"
                    android:id="@+id/textConnectMsg3"
                    android:text="接続しない場合はそのまま続行。"
                    android:layout_width="600dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_below="@+id/textConnectMsg3"
                    android:id="@+id/textConnectMsg4"
                    android:text=""
                    android:layout_width="600dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_below="@+id/textConnectMsg4"
                    android:id="@+id/textConnectStatus"
                    android:text="connect. / not connected."
                    android:layout_width="600dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                    android:layout_alignParentStart="true" />


            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="100dp"
                android:layout_width="600dp"
                android:layout_gravity="center"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="0dp"
                android:layout_alignParentEnd="true">

                <Button
                    android:id="@+id/buttonYes"
                    android:text="接続する"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/buttonNo"
                    android:text="続行"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:textSize="30sp" />


            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/TimerLayout"
            android:background="@color/black_overlay"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TextView
                android:text="TIME:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TIME"
                android:textSize="50sp"
                android:textColor="@android:color/black" />

            <TextView
                android:text="00:00.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textTimer"
                android:textSize="50sp"
                android:textColor="@android:color/black"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/TIME" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="700dp"
            android:layout_height="50dp"
            android:id="@+id/CoursenameLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:text="コース番号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textCourse"
                android:textSize="36sp"
                android:textColor="@android:color/holo_red_light"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/BarLayout"
            android:layout_height="800px"
            android:layout_width="50px"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp" >

            <ImageView
                app:srcCompat="@drawable/bar"
                android:id="@+id/image_view_bar"
                android:layout_width="50px"
                android:layout_height="800px"
                android:layout_centerInParent="true" />

            <RelativeLayout
                android:id="@+id/ghostLayout"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp">

                <ImageView
                    app:srcCompat="@drawable/ghost"
                    android:id="@+id/image_view_ghost"
                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <ImageView
                app:srcCompat="@drawable/me"
                android:id="@+id/image_view_me"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="750px" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_height="50dp"
            android:layout_width="160dp"
            android:id="@+id/HeartBeatLayout"
            android:layout_alignTop="@+id/buttonResult"
            android:layout_alignParentEnd="true">

            <TextView
                android:text="心拍:      "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Sinpaku"
                android:textSize="36sp"
                android:textColor="@android:color/holo_red_light"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textHeartbeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:text="999"
                android:textSize="80px"
                android:layout_gravity="right"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/MeterLayout"
            android:layout_height="200dp"
            android:layout_width="230dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/meter2"
                android:id="@+id/image_meter"
                android:layout_width="match_parent" />

            <TextView
                android:id="@+id/textSpeedInt"
                android:textColor="@android:color/holo_orange_light"
                android:text="50"
                android:layout_gravity="bottom|right"
                android:layout_width="70dp"
                android:layout_marginStart="50dp"
                android:textSize="120px"
                android:layout_height="65dp"
                android:gravity="bottom|right"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="TextView"
                android:id="@+id/textSpeedDec"
                android:gravity="bottom|right"
                android:textSize="40sp"
                android:textColor="@android:color/holo_orange_light"
                tools:text=".0"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_alignTop="@+id/textSpeedInt"
                android:layout_toEndOf="@+id/textSpeedInt" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textMileageDec"
                android:textColor="@android:color/holo_orange_light"
                tools:text=".99"
                android:textSize="25sp"
                android:layout_marginStart="22dp"
                android:layout_marginBottom="48dp"
                android:layout_above="@+id/textSpeedDec"
                android:layout_toEndOf="@+id/textSpeedInt"
                android:gravity="bottom|right" />

            <TextView
                android:text="999"
                android:id="@+id/textMileageInt"
                android:textSize="50sp"
                android:textColor="@android:color/holo_orange_light"
                android:gravity="bottom|right"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_above="@+id/textSpeedInt"
                android:layout_alignStart="@+id/textSpeedInt"
                android:layout_marginBottom="26dp" />

            <RelativeLayout
                android:id="@+id/HariLayout"
                android:layout_height="200dp"
                android:layout_width="2300dp"
                android:layout_marginTop="0px"
                android:gravity="bottom|right">

                <ImageView
                    android:id="@+id/image_Hari"
                    app:srcCompat="@drawable/hari4_45"
                    android:visibility="visible"
                    android:scaleType="centerInside"
                    android:layout_marginRight="21px"
                    android:layout_marginBottom="-35px"
                    android:layout_width="208dp"
                    android:layout_height="208dp" />
            </RelativeLayout>



        </RelativeLayout>

        <TextView
            android:text="textSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textSpeed"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="30sp"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/buttonPause"
            android:text="Pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_alignTop="@+id/ConnectCheak"
            android:layout_toEndOf="@+id/ConnectCheak" />

        <TextView
            android:id="@+id/textMileage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:text="textMileage"
            android:textSize="80px"
            android:layout_gravity="right"
            android:gravity="bottom|right"
            android:layout_below="@+id/textSpeed"
            android:layout_alignParentEnd="true" />

        <RelativeLayout
            android:layout_below="@+id/textConnectMsg4"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="439dp"
            android:layout_width="200dp"
            android:layout_height="200dp">

            <ImageView
                app:srcCompat="@drawable/hari3"
                android:id="@+id/TestHari"
                android:layout_marginTop="14dp"
                android:layout_alignTop="@+id/ConnectCheak"
                android:layout_toStartOf="@+id/ConnectCheak"
                android:layout_width="200dp"
                android:layout_height="200dp" />
        </RelativeLayout>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textTest"
            android:layout_toStartOf="@+id/ConnectCheak"
            android:layout_marginTop="43dp"
            android:id="@+id/textGetPlayTime"
            android:textSize="36sp"
            android:textColor="@android:color/holo_orange_light" />

    </RelativeLayout>


</FrameLayout>