<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".VideoSelect"
    android:id="@+id/CourseSelectLayout"
    android:background="@drawable/map">

    <TextView
        android:id="@+id/textMSG"
        android:text="トレーニングコースを選んでください"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:background="@android:color/black"
        android:layout_height="60dp" />

    <Button
        android:id="@+id/course7"
        android:textSize="20sp"
        android:visibility="visible"
        android:background="@drawable/button_state"
        android:layout_marginEnd="272dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="瀬"
        android:layout_alignTop="@+id/course2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp" />

    <Button
        android:id="@+id/course2"
        android:textSize="20sp"
        android:background="@drawable/button_state"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="出"
        android:layout_marginStart="15dp"
        android:layout_alignTop="@+id/course3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/course3"
        android:textSize="20sp"
        android:visibility="visible"
        android:background="@drawable/button_state"
        android:layout_marginTop="12dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="鳴"
        android:layout_below="@+id/textMSG"
        android:layout_toEndOf="@+id/course2" />

    <Button
        android:id="@+id/course1"
        android:textSize="20sp"
        android:visibility="visible"
        android:background="@drawable/button_state"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="伊"
        android:layout_below="@+id/course3"
        android:layout_alignStart="@+id/course6" />

    <Button
        android:id="@+id/course0"
        android:textSize="20sp"
        android:background="@drawable/button_state"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="瀬"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/course1"
        android:layout_alignStart="@+id/course7" />

    <Button
        android:id="@+id/course6"
        android:textSize="20sp"
        android:visibility="visible"
        android:background="@drawable/button_state"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="瀬"
        android:layout_marginStart="24dp"
        android:layout_alignTop="@+id/course0"
        android:layout_toEndOf="@+id/course0"
        android:layout_marginTop="14dp" />


</RelativeLayout>